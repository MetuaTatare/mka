/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2018",
        "module": "es2020",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "jasmine"],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@mka/*": [
                "libs/*"
            ],
        },
        "noImplicitAny": true,
    },
    "exclude": ["tmp", "dist", "node-modules"],
}